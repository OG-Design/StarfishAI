/*
I need: 

id of group = idUserGroup,
id of user = user_idUser from groupMember.user_idUser
id userGroup = userGroup_idUserGroup from groupMember

name = name from userGroup.name
permissionLevel = permissionLevel from userGroup
*/

/* Selects userdata, groupMembers of userGroups and their permissions */
SELECT idGroupMember, name, permissionLevel, username, userGroup_idUserGroup, user_idUser
FROM groupMember
INNER JOIN userGroup -- join userGroup's (the permission level groups)
ON groupMember.userGroup_idUserGroup = userGroup.idUserGroup
INNER JOIN user -- join userdata
ON groupMember.user_idUser = user.idUser


